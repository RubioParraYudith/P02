@model IEnumerable<ControlInventario.Models.Product>

@{
    ViewBag.Title = "Index";
}
<div class="masthead">
    <div class="masthead-content foot">
        <div class="container">

            <div class="row col-md-12">
                <div class="col-md-6 col-md-offset-3">
                    <h4 class="text-center">Lista de Productos</h4>
                </div>
            </div>
            <p>
                <a href="@Url.Action("Create","Products")" class="btn btn-sm btn-success">Nuevo Producto</a>
            </p>
            <table class="table table-hover table-condensed">
                <tr>
                    <th>
                        Proveedor
                    </th>
                    <th>
                        Código de Producto
                    </th>
                    <th>
                        Nombre de Producto
                    </th>
                    <th>
                        Descripción
                    </th>
                    <th>
                        Cantidad
                    </th>
                    <th>
                        Precio
                    </th>
                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Supplier.SupplierName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ProductCode)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ProductName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Description)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Quantity)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Price)
                        </td>
                        <td>
                            @Html.ActionLink("Editar", "Edit", new { id = item.Id }, new { @class = "btn btn-warning btn-sm" }) |
                            @Html.ActionLink("Detalles", "Details", new { id = item.Id }, new { @class = "btn btn-info btn-sm" }) |
                            @Html.ActionLink("Eliminar", "Delete", new { id = item.Id }, new { @class = "btn btn-danger btn-sm" })
                        </td>
                    </tr>
                }

            </table>
            </div>
        </div>
    </div>

